{
  "name": "rest-express",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "npx dotenv-cli -f .env --override -- npx tsx server/index.ts",
    "dev:test": "./scripts/start-test-server.sh",
    "dev:client": "npx dotenv-cli -f .env --override -- vite --config config/vite.config.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --config config/vite.config.ts",
    "build:server": "esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "NODE_ENV=production node dist/index.js",
    "deploy:railway": "railway deploy",
    "deploy:setup": "./scripts/setup-railway.sh",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "db:migrations:generate": "drizzle-kit generate --config=./config/drizzle.config.ts",
    "db:push": "drizzle-kit push --config=config/drizzle.config.ts",
    "db:push:test": "npx dotenv-cli -f .env.test --override -- drizzle-kit push --config=config/drizzle.config.ts",
    "db:migrations:apply": "npx tsx ./db-migration-scripts/migrate.ts",
    "db:migrations:apply:test": "NODE_ENV=test npx dotenv-cli -f .env.test --override -- npx tsx ./db-migration-scripts/migrate.ts",
    "db:audit": "npx tsx ./scripts/audit-database-integrity.ts",
    "db:audit:test": "NODE_ENV=test npx dotenv-cli -f .env.test --override -- npx tsx ./scripts/audit-database-integrity.ts",
    "db:reset": "npx tsx ./db-migration-scripts/reset-db.ts",
    "db:reset:test": "npx tsx ./db-migration-scripts/reset-db-test.ts",
    "test": "NODE_ENV=test npx dotenv-cli -f .env.test --override -- vitest --config=test-config/vitest/vitest.unified.config.mjs",
    "test:unit": "NODE_ENV=test TEST_MODE=unit TEST_ISOLATION=false npx dotenv-cli -f .env.test --override -- vitest run tests/unit --config=test-config/vitest/vitest.unified.config.mjs",
    "test:component": "NODE_ENV=test TEST_MODE=component TEST_ISOLATION=true npx dotenv-cli -f .env.test --override -- vitest run tests/component --config=test-config/vitest/vitest.unified.config.mjs",
    "test:integration": "NODE_ENV=test TEST_MODE=integration TEST_ISOLATION=true npx dotenv-cli -f .env.test --override -- vitest run tests/integration --config test-config/vitest/vitest.unified.config.mjs",
    "test:e2e": "NODE_ENV=test E2E_TEST_MODE=true npx dotenv-cli -f .env.test --override -- npx playwright test --config=test-config/playwright.config.ts"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.39.3",
    "drizzle-zod": "^0.7.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.1",
    "isomorphic-dompurify": "^2.26.0",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.100.0",
    "pg": "^8.16.0",
    "postgres": "^3.4.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "supertest": "^7.1.1",
    "winston": "^3.17.0",
    "wouter": "^3.3.5",
    "ws": "^8.18.0",
    "zod": "^3.23.8",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "20.16.11",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.5.5",
    "@vitejs/plugin-react": "^4.5.0",
    "@vitest/coverage-v8": "^3.1.3",
    "@vitest/ui": "^3.1.4",
    "autoprefixer": "^10.4.20",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.30.4",
    "esbuild": "^0.25.0",
    "eslint": "^9.26.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.14",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
