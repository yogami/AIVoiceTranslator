# Production environment variables for Railway deployment
# Copy this file to .env.production and update the values

# Server Configuration
PORT=$PORT
HOST=0.0.0.0
NODE_ENV=production
LOG_LEVEL=info

# Database Configuration
# Railway will provide this automatically when you add PostgreSQL
DATABASE_URL=$DATABASE_URL

# API Keys (Set these in Railway dashboard)
OPENAI_API_KEY=your-openai-api-key-here

# Client URLs (Update with your Railway domain)
VITE_API_URL=https://your-app-name.railway.app
VITE_WS_URL=wss://your-app-name.railway.app

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-here
TTS_SERVICE_TYPE=openai
STORAGE_TYPE=database

# Session timeouts for production (in milliseconds)
SESSION_VERY_SHORT_THRESHOLD_MS=5000
SESSION_EMPTY_TEACHER_TIMEOUT_MS=900000        # 15 minutes
SESSION_ALL_STUDENTS_LEFT_TIMEOUT_MS=600000    # 10 minutes  
SESSION_STALE_TIMEOUT_MS=5400000               # 90 minutes
SESSION_CLEANUP_INTERVAL_MS=30000              # 30 seconds
CLASSROOM_CODE_EXPIRATION_MS=7200000           # 2 hours
CLASSROOM_CODE_CLEANUP_INTERVAL_MS=300000      # 5 minutes
HEALTH_CHECK_INTERVAL_MS=60000                 # 1 minute
TEACHER_RECONNECTION_GRACE_PERIOD_MS=10000     # 10 seconds

# Audio Configuration
MIN_AUDIO_DATA_LENGTH=100
MIN_AUDIO_BUFFER_LENGTH=100

# Messaging Configuration
SESSION_EXPIRED_MESSAGE_DELAY_MS=1000
INVALID_CLASSROOM_MESSAGE_DELAY_MS=1000
LOG_TEXT_PREVIEW_LENGTH=100

# Feature Flags
ENABLE_DETAILED_TRANSLATION_LOGGING=true
