# Production environment (Railway)

NODE_ENV=production
LOG_LEVEL=info

# Railway binds to all interfaces
HOST=0.0.0.0

# PORT is provided by Railway; keep for explicitness if needed
# PORT=3000

# Database (provided in Railway variables)
DATABASE_URL=

# Secrets (set in Railway dashboard)
JWT_SECRET=
SESSION_SECRET=

# API keys (set in Railway dashboard)
OPENAI_API_KEY=
ELEVENLABS_API_KEY=

# Service tiers
STT_SERVICE_TYPE=auto
TRANSLATION_SERVICE_TYPE=auto
TTS_SERVICE_TYPE=auto

# Whisper model (if using local Whisper tier)
WHISPER_MODEL=base

# App configuration
ANALYTICS_PASSWORD=
COMMUNICATION_PROTOCOL=websocket

# Frontend runtime config (public URLs)
VITE_API_URL=https://your-production-host
VITE_WS_URL=wss://your-production-host

# Optional
# MYMEMORY_EMAIL=
# ANALYTICS_ALLOWED_IPS=
# TEMP_DIR=

# WebRTC experiment flags (do NOT enable in prod unless testing)
# REALTIME_APP_ENABLED=0
# REALTIME_WEBRTC_ALLOW_EXPERIMENT=0
# REALTIME_TRANSPORT=websocket

