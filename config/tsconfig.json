{
  "include": ["../client/src/**/*", "../shared/**/*", "../server/**/*"],
  "exclude": ["node_modules", "build", "dist"],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "../node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "module": "ESNext",
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "baseUrl": "..",
    "types": ["node", "vite/client"],
    "paths": {
      "@/*": ["../client/src/*"],
      "@shared/*": ["../shared/*"],
      "@services/*": ["../server/services/*"],
      "@helpers/*": ["../server/services/helpers/*"],
      "@managers/*": ["../server/services/managers/*"],
      "@transcription/*": ["../server/services/transcription/*"],
      "@textToSpeech/*": ["../server/services/textToSpeech/*"],
      "@processors/*": ["../server/services/processors/*"],
      "@handlers/*": ["../server/services/handlers/*"],
      "@config/*": ["../server/config/*"],
      "@db": ["../server/db"],
      "@routes": ["../server/routes"],
      "@websocket": ["../server/websocket"],
      "@openai": ["../server/openai"],
      "@storage": ["../server/storage"]
    }
  }
}